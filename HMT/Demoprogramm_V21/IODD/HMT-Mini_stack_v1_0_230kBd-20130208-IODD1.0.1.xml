        <MaintenanceRoleMenuSet>
          <IdentificationMenu menuId="ME_Ident"/>
          <ParameterMenu menuId="ME_Param"/>
        </MaintenanceRoleMenuSet>

        <!--SpecialistRoleMenuSet(m) -->
        <SpecialistRoleMenuSet>
          <IdentificationMenu menuId="ME_Ident"/>
          <ParameterMenu menuId="ME_Param"/>
        </SpecialistRoleMenuSet>

